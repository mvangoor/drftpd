<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <File name="root" fileName="build.log">
      <PatternLayout>
        <Pattern>%p %d{ISO8601} [%t] %c %x - %m%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="FATAL">
      <AppenderRef ref="root"/>
    </Root>
    <Logger name="org.apache.tools.ant.Project" level="FATAL"/>
    <Logger name="org.apache.tools.ant.Project" level="FATAL"/>
    <Logger name="org.apache.tools.ant.taskdefs" level="FATAL"/>
    <Logger name="org.apache.tools.ant.taskdefs.Echo" level="FATAL"/>
  </Loggers>
</Configuration>
